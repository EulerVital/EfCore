@model Dominio.Entidades.Produto

@{
    ViewData["Title"] = "Produto";
}

    <h2>Formulário de Produto</h2>

<h4>Produto</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label" for="Nome">Categoria</label>
                <select class="form-control" asp-for="CategoriaId" asp-items="@(new SelectList(ViewBag.Categorias, "Id", "Nome"))"></select>
            </div>
            <div class="form-group">
                <label class="control-label" for="Nome">Ativo</label>
                <input type="checkbox" asp-for="Ativo"  class="checkbox" checked />
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

