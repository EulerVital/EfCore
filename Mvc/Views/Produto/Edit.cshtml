@model Dominio.Entidades.Produto

@{
    ViewData["Title"] = "Edit";
}

<h2>Formulário de Edição do Produto</h2>

<h4>Editar Produto</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label" for="Nome">Categoria</label>
                <select class="form-control" asp-for="CategoriaId" asp-items="@(new SelectList(ViewBag.Categorias, "Id", "Nome", Model.CategoriaId))"></select>
            </div>
            <div class="form-group">
                <label class="control-label" for="Nome">Ativo</label>
                <input type="checkbox" asp-for="Ativo" class="checkbox" checked='@(Model.Ativo ? "true": "false")' />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

